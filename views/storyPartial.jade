section.storyBlock.col-lg-3.col-md-3.col-sm-4.col-xs-4
    h4
        a(href='/story/#{item.title}') #{item.title}
    if item.finished
        p 
            b This Story is finished
    div.summary Current contents: #{item.content}
    p Item was created by user 
        b #{item.created_by}, 
    p Item was last updated by user 
        b #{item.last_update_by}