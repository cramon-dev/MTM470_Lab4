extends layout

block content
    h1 #{work.title}
    div
        p #{work.content}
    if user
        form(id = 'storyForm',  method='post', action='/edit/#{work.title}')
            textarea(name='adds', id='content', rows="15", cols="100",form="storyForm")
            br
            input(type='submit', value='Edit')
        form(id = 'button',  method='post', action='/finish/#{work.title}')
            input(type='submit', value='Finish')